	<beans:bean id="multipartResolver" class="org.springframework.web.multipart.support.StandardServletMultipartResolver">
	</beans:bean>
	<context:component-scan base-package="com.beetmarket" />
	
	<aop:aspectj-autoproxy></aop:aspectj-autoproxy>
	<task:annotation-driven />
	<interceptors>
		<interceptor>
			<mapping path="/**"/>
			<beans:bean class="com.beetmarket.util.intercepter.AuthrityInterceptor"></beans:bean>
		</interceptor>
	</interceptors>
	
</beans:beans>
